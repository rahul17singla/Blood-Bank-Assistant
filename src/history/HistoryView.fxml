<AnchorPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="history.HistoryViewController">
   <children>
      <AnchorPane minHeight="350.0" minWidth="350.0" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: e87676; -fx-border-color: black; -fx-border-width: 3;">
         <children>
            <Button alignment="CENTER" layoutX="46.0" layoutY="152.0" mnemonicParsing="false" onAction="#getDonor" prefHeight="46.0" prefWidth="258.0" style="-fx-background-color: gold;" text="Get Donation History">
               <font>
                  <Font name="Calibri Bold" size="25.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button alignment="CENTER" layoutX="46.0" layoutY="232.0" mnemonicParsing="false" onAction="#getReciever" prefHeight="46.0" prefWidth="258.0" style="-fx-background-color: gold;" text="Get Reciever History">
               <font>
                  <Font name="Calibri Bold" size="25.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <ImageView fitHeight="100.0" fitWidth="113.0" layoutX="222.0" layoutY="31.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../imgs/history.jpg" />
               </image>
            </ImageView>
            <Label fx:id="lblLogo" layoutX="24.0" layoutY="44.0" prefHeight="74.0" prefWidth="198.0" text="Blood Bank" textFill="WHITE" underline="true">
